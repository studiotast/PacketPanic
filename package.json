{
  "name": "threejs-journey-exercise",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"vite\" \"npm run i18n:watch\"",
    "build": "vite build",
    "deploy": "vercel --prod",
    "tsc": "tsc --noEmit --watch",
    "i18n:watch": "chokidar 'public/locales/**/*.json' -c 'i18next-cli sync && i18next-cli types && prettier --write resources/assets/typings/resources.d.ts public/locales/en/translation.json' --silent"
  },
  "devDependencies": {
    "@types/howler": "^2.2.12",
    "@types/node": "^22.15.18",
    "@types/react-dom": "^19.1.5",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "4.3",
    "sass": "^1.88.0",
    "vite": "^5.3.3",
    "vite-plugin-restart": "^0.4.1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/pro-regular-svg-icons": "^6.7.2",
    "@fortawesome/pro-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@plausible-analytics/tracker": "^0.4.4",
    "@react-three/drei": "^9.108.1",
    "@react-three/fiber": "^8.16.8",
    "@react-three/rapier": "^1.4.0",
    "@tippyjs/react": "^4.2.6",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.1",
    "framer-motion": "^12.6.3",
    "gsap": "^3.12.7",
    "howler": "^2.2.4",
    "i18next": "^25.7.4",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-cli": "^1.35.0",
    "leva": "^0.9.34",
    "r3f-perf": "^7.2.3",
    "react": "18.3",
    "react-dom": "18.3",
    "react-i18next": "^16.5.2",
    "react-router-dom": "^6.30.1",
    "three": "^0.166.1",
    "tippy.js": "^6.3.7",
    "vercel": "^41.2.2",
    "zustand": "^4.5.0"
  },
  "lint-staged": {
    "public/locales/**/*.json": [
      "bash -c 'i18next-cli status en'",
      "prettier --write"
    ]
  }
}
